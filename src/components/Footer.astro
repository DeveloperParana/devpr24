---
import { Image } from "astro:assets";
import instagramImage from "../../public/instagram.svg";
import twitterImage from "../../public/twitter.svg";
import Counter from "./Counter.astro";
---

<div
  class="bg-neutral-950/80 w-full flex items-center justify-center py-20 overflow-hidden"
>
  <div
    class="max-w-7xl px-4 md:px-8 lg:px-12 w-full mx-auto text-white flex flex-col items-center justify-center gap-16"
  >
    <div class="w-full">
      <div
        class="flex flex-col text-enterprise text-2xl md:text-3xl lg:text-4xl font-black text-white text-center mb-8"
      >
        <span class="md:whitespace-nowrap">Patrocinadores</span>
      </div>

      <div class="flex gap-4 w-full">
        <div class="rounded-xl bg-teste/80 border border-green-900/50 min-h-14 w-full p-4"></div>
        <div class="rounded-xl bg-teste/80 border border-green-900/50 min-h-14 w-full p-4"></div>
        <div class="rounded-xl bg-teste/80 border border-green-900/50 min-h-14 w-full p-4"></div>
        <div class="rounded-xl bg-teste/80 border border-green-900/50 min-h-14 w-full p-4"></div>
        <div class="rounded-xl bg-teste/80 border border-green-900/50 min-h-14 w-full p-4"></div>
        <div class="rounded-xl bg-teste/80 border border-green-900/50 min-h-14 w-full p-4"></div>
      </div>
    </div>

    <div class="h-0.5 bg-green-800/10 w-full"></div>

    <div
      class="bg-green-950/50 border border-green-900/50 rounded-xl overflow-hidden p-4 md:p-8 lg:p-12 w-full flex flex-col gap-8"
    >
      <div
        class="flex flex-col text-xl md:text-2xl lg:text-3xl xl:text-4xl font-black text-white text-center lg:text-left"
      >
        <span class="md:whitespace-nowrap">A DevParaná Conf é organizada</span>
        <span class="text-green-600 md:whitespace-nowrap"
          >por pessoas da comunidade</span
        >
        <span class="md:whitespace-nowrap">para comunidade.</span>
      </div>

      <div class="flex justify-center lg:justify-start">
        <a
          href="#"
          class="cursor-pointer rounded-full font-semibold leading-6 whitespace-nowrap block text-center bg-green-700 hover:bg-green-600 text-neutral-950 text-base lg:text-lg px-8 py-4"
        >
          Conhecer palestrantes
        </a>
      </div>
    </div>

    <div class="h-0.5 bg-green-800/10 w-full"></div>

    <div class="w-full justify-between items-start flex flex-col lg:flex-row gap-8">
      <div class="flex flex-col gap-2">
        <div class="text-green-600 font-medium text-lg">
          Contagem regressiva
        </div>
        <Counter />
      </div>

      <div class="flex gap-8 w-full max-w-lg justify-between">
        <ul class="flex flex-col gap-2">
          <li class="text-green-600 font-medium text-lg">Item link 1</li>
          <li class="text-neutral-400 text-base">Item link 1</li>
          <li class="text-neutral-400 text-base">Item link 2</li>
          <li class="text-neutral-400 text-base">Item link 3</li>
          <li class="text-neutral-400 text-base">Item link 4</li>
        </ul>

        <ul class="flex flex-col gap-2">
          <li class="text-green-600 font-medium text-lg">Item link 1</li>
          <li class="text-neutral-400 text-base">Item link 1</li>
          <li class="text-neutral-400 text-base">Item link 2</li>
          <li class="text-neutral-400 text-base">Item link 3</li>
          <li class="text-neutral-400 text-base">Item link 4</li>
        </ul>

        <ul class="flex flex-col gap-2">
          <li class="text-green-600 font-medium text-lg">Item link 1</li>
          <li class="text-neutral-400 text-base">Item link 1</li>
          <li class="text-neutral-400 text-base">Item link 2</li>
          <li class="text-neutral-400 text-base">Item link 3</li>
          <li class="text-neutral-400 text-base">Item link 4</li>
        </ul>
      </div>
    </div>

    <div class="h-0.5 bg-green-800/10 w-full"></div>

    <div class="flex justify-between items-center w-full">
      <div class="md:whitespace-nowrap text-neutral-400">
        DevParaná Conference 2024
      </div>
      <div class="flex gap-6">
        <a
          href="#"
          class="text-white/80 hover:text-green-600 text-base lg:text-lg whitespace-nowrap"
        >
          <Image src={instagramImage} width={24} alt="Instagram" />
        </a>
        <a
          href="#"
          class="text-white/80 hover:text-green-600 text-base lg:text-lg whitespace-nowrap"
        >
          <Image src={twitterImage} width={24} alt="Twitter" />
        </a>
      </div>
    </div>
  </div>
</div>
